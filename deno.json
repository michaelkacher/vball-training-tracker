{
  "name": "@your-org/web-project-starter",
  "version": "0.1.0",
  "exports": "./backend/main.ts",
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --allow-run --allow-write --watch dev.ts",
    "dev:backend": "deno run --unstable-kv --allow-net --allow-read --allow-env --allow-write --watch backend/main.ts",
    "dev:frontend": "cd frontend && deno task start",
    "start": "deno run --unstable-kv --allow-net --allow-read --allow-env --allow-write backend/main.ts",
    "start:frontend": "cd frontend && deno task preview",
    "build": "deno task build:backend && deno task build:frontend",
    "build:backend": "deno compile --unstable-kv --allow-net --allow-read --allow-env --allow-write --output=./dist/backend backend/main.ts",
    "build:frontend": "cd frontend && DENO_ENV=production deno task build",
    "preview": "DENO_ENV=production deno run --allow-net --allow-read ./dist/backend",
    "deploy": "deployctl deploy --project=your-project-name --prod --env=DENO_ENV:production backend/main.ts",
    "deploy:preview": "deployctl deploy --project=your-project-name --env=DENO_ENV:production backend/main.ts",
    "test": "deno test --allow-read --allow-env --allow-net --allow-write --unstable-kv",
    "test:watch": "deno test --allow-read --allow-env --allow-net --allow-write --unstable-kv --watch",
    "test:coverage": "deno test --allow-read --allow-env --allow-net --allow-write --unstable-kv --coverage=coverage",
    "coverage": "deno coverage coverage --lcov --output=coverage.lcov",
    "check": "deno task lint && deno task fmt:check && deno task type-check",
    "lint": "deno lint",
    "lint:fix": "deno lint --fix",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "type-check": "deno check backend/**/*.ts && cd frontend && deno check **/*.ts **/*.tsx",
    "clean": "rm -rf dist coverage .fresh frontend/_fresh",
    "kv:seed": "deno run --allow-read --allow-write --allow-env scripts/seed-local-kv.ts",
    "kv:reset": "deno run --allow-read --allow-write scripts/reset-local-kv.ts",
    "kv:inspect": "deno run --allow-read --allow-write --allow-env scripts/inspect-local-kv.ts",
    "kv:seed-user": "deno run --unstable-kv --allow-read --allow-write --allow-env scripts/seed-test-user.ts",
    "kill-ports": "deno run --allow-run scripts/kill-ports.ts",
    "users:list": "deno run --unstable-kv --allow-read --allow-write --allow-env scripts/list-users.ts",
    "users:make-admin": "deno run --unstable-kv --allow-read --allow-write --allow-env scripts/make-admin.ts"
  },
  "deploy": {
    "project": "your-project-name",
    "entrypoint": "backend/main.ts",
    "exclude": [
      "dist",
      "coverage",
      ".fresh",
      "frontend/_fresh",
      "tests",
      ".git"
    ]
  },
  "imports": {
    "@/": "./backend/",
    "@std/": "jsr:@std/",
    "hono": "jsr:@hono/hono@^4",
    "zod": "https://deno.land/x/zod@v3.22.4/mod.ts",
    "playwright/test": "npm:@playwright/test@^1.48"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["deno.window", "dom", "dom.iterable"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"]
    },
    "exclude": [
      "dist",
      "coverage"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      "dist",
      "coverage"
    ]
  },
  "test": {
    "include": [
      "backend/**/*_test.ts",
      "backend/**/*.test.ts",
      "tests/**/*.test.ts"
    ],
    "exclude": [
      "dist",
      "coverage"
    ]
  },
  "exclude": [
    "dist",
    "coverage"
  ],
  "nodeModulesDir": "none",
  "lock": true
}
